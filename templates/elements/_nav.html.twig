{% block nav %}
	<!-- Nav -->
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-2"></div>
			<div class="col-md-8">
				<div class="row">
					<nav class="navbar navbar-expand-lg rounded my-5 p-3 shadow bg-white">
						<div class="container-fluid">
							<a class="navbar-brand fw-bold" href="{{ path('app_home') }}">Accueil</a>
							<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
								<span class="navbar-toggler-icon"></span>
							</button>
							<div class="collapse navbar-collapse" id="navbarSupportedContent">
								<ul class="navbar-nav ms-auto mb-2 mb-lg-0 fs-5 fw-bold">
									<li class="nav-item">
										<a id="navQuiSommeNous" class="nav-link" aria-current="page" href="{{ path('app_quisommesnous') }}" onclick="activeNav('navQuiSommeNous')">
											<div class="d-flex flex-row justify-content-center">
												<img src="../img/site/achilleemillefeuille.jpg" alt="Image Achillé Mille Feuilles" style="max-width: 2rem;">
												Qui sommes-nous?
												<img src="../img/site/achilleemillefeuille.jpg" alt="Image Achillé Mille Feuilles" style="max-width: 2rem;">
											</div>
										</a>
									</li>
									<li class="nav-item">
										<a id="navActualite" class="nav-link" href="{{ path('app_actualite') }}">
											<div class="d-flex flex-row justify-content-center">
												<img src="../img/site/camomille.jpg" alt="Image camomille" style="max-width: 2rem;">
												Actualités
												<img src="../img/site/camomille.jpg" alt="Image camomille" style="max-width: 2rem;">
											</div>
										</a>
									</li>
									<li class="nav-item">
										<a id="navPassezALAction" class="nav-link" href="{{ path('app_passezalaction') }}">
											<div class="d-flex flex-row justify-content-center">
												<img src="../img/site/lierreterrestre.jpg" alt="Image Lierre Terrestre" style="max-width: 2rem;">
												Passer à l'action
												<img src="../img/site/lierreterrestre.jpg" alt="Image Lierre Terrestre" style="max-width: 2rem;">
											</div>
										</a>
									</li>
									{% if app.user and is_granted('ROLE_ADMIN')%}
										<li class="nav-item active">
											<a class="nav-link" href="{{'/admin'}}">
												<i class="fa-solid fa-user-gear mt-2"></i>
											</a>
										</li>
                    {% endif %}
                    {% if app.user %}
										<li class="nav-item active">
											<a class="nav-link" href="{{'/logout'}}">
												<i class="fa-solid fa-sign-out mt-2"></i>
											</a>
										</li>
									{% endif %}
									{% if not app.user and not (app.request.pathInfo == '/' or app.request.pathInfo == '/login' or app.request.pathInfo == '/register') %}
										<li class="nav-item active">
											<a class="nav-link" href="{{ path('app_login') }}">
												<i class="fa-solid fa-user mt-2"></i>
											</a>
										</li>
									{% endif %}
								</ul>
								{# <form class="d-flex" role="search">
								                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
								                <button class="btn btn-outline-success" type="submit">Search</button>
								              </form> #}
							</div>
						</div>
					</nav>
				</div>
			</div>
			<div class="col-md-2"></div>
		</div>
	</div>
{% endblock nav %}
