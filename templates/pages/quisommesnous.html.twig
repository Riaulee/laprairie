{% extends 'base.html.twig' %}

{% block header %}
	<div class="container-fluid mb-5">
		<div class="row">
			<div class="col-md-2"></div>
			<div class="col-md-8">
				<div id="banner">
					<div class="row rounded p-3 opacity-100 d-flex align-items-center shadow bg-white">
						<div class="text-center">
							<h2 class="display-3 fw-bolder">
								<img src="../img/site/eupatoire.jpg" alt="Image Eupatoire" style="max-width: 5rem;">
								Qui sommes nous ?
								<img src="../img/site/eupatoire.jpg" alt="Image Eupatoire" style="max-width: 5rem;">
							</h2>
							{% if is_granted('ROLE_EDITOR') %}
								<div class="btn d-flex justify-content-end" onclick="penModifyContent()">
									<i class="fa-solid fa-pen"></i>
								</div>
							{% endif %}
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-2"></div>
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="container-fluid mb-5">
		<div class="row">
			<div class="col-md-2"></div>
			<div class="col-md-8">

				{% for c in content %}
					<div class="row">
						<div class="card mb-3 shadow border-success border-5">
							<div class="row g-0">
							{% if c.positionImage == 'gauche' %}
								<div class="col-md-4">
									<img src="{{ c.image }}" class="img-fluid rounded py-4 px-2" alt="Image nos valeurs" id="ivaleur">
								</div>
								<div class="col-md-8">
									<div class="card-body">
										<h5 class="card-title" id="tvaleur">{{ c.title }}</h5>
										<p class="card-text" id="cvaleur">{{ c.content }}
										</p>
										<p class="card-text">
											<small class="text-muted" id="avaleur">Dernière mise à jour en
												{% if c.updateAt != null and c.updateAt != '' %}
													{{ c.updateAt|date("m/Y") }}
												{% else %}
													{{ c.createdAt|date("m/Y") }}
												{% endif %}
											</small>
										</p>
									</div>
								</div>
							{% else %}
								<div class="col-md-8">
									<div class="card-body">
										<h5 class="card-title" id="tvaleur">{{ c.title }}</h5>
										<p class="card-text" id="cvaleur">{{ c.content }}
										</p>
										<p class="card-text">
											<small class="text-muted" id="avaleur">Dernière mise à jour en
												{% if c.updateAt != null and c.updateAt != '' %}
													{{ c.updateAt|date("m/Y") }}
												{% else %}
													{{ c.createdAt|date("m/Y") }}
												{% endif %}
											</small>
										</p>
									</div>
								</div>
								<div class="col-md-4">
									<img src="{{ c.image }}" class="img-fluid rounded py-4 px-2" alt="Image nos valeurs" id="ivaleur">
								</div>
							{% endif %}
							</div>
						</div>
					</div>
				{% endfor %}

